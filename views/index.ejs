<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .inputField {
            width: 100%;
            padding: 10px;
            border: 1px solid green;
            border-radius: 5px;
        }

        /* class="w-full bg-emerald-500 text-white text-lg font-semibold py-2 rounded-lg hover:bg-emerald-400 active:scale-95 transition-all */
        .submit-btn {
            width: 100%;
            padding: 10px;
            border: 1px solid green;
            border-radius: 5px;
            background-color: rgb(255, 115, 0);
            

        }
    </style>
</head>

<body class="bg-gray-100 font-sans">

    <div class="min-h-screen p-10 flex flex-col items-center justify-start gap-10">

        <h1 class="text-4xl font-bold text-emerald-600 drop-shadow-sm">User Management Dashboard</h1>

        <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">

            <!-- Create User -->
            <div class="bg-white shadow-lg rounded-2xl p-6 w-80 border border-emerald-200">
                <form method="post" action="/create" class="space-y-4">
                    <h2 class="text-xl font-semibold text-emerald-600 text-center">Create User</h2>
                    <input name="name" class="inputField" type="text" placeholder="Enter Your Name">
                    <input name="username" class="inputField" type="text" placeholder="Enter Your Username">
                    <input name="email" class="inputField" type="email" placeholder="Enter Your Email">
                    <input name="password" class="inputField" type="password" placeholder="Enter Your Password">
                    <button type="submit" class="submit-btn">Create</button>
                </form>
            </div>

            <!-- Update User -->
            <div class="bg-white shadow-lg rounded-2xl p-6 w-80 border border-emerald-200">
                <form method="post" action="/update" class="space-y-4">
                    <h2 class="text-xl font-semibold text-emerald-600 text-center">Update User</h2>
                    <input name="username" class="inputField" type="text" placeholder="Username to Update">
                    <input name="name" class="inputField" type="text" placeholder="Enter New Name">
                    <input name="password" class="inputField" type="password" placeholder="Enter New Password">
                    <button type="submit" class="submit-btn">Update</button>
                </form>
            </div>

            <!-- Read User -->
            <div class="bg-white shadow-lg rounded-2xl p-6 w-80 border border-emerald-200">
                <form method="post" action="/read" class="space-y-4">
                    <h2 class="text-xl font-semibold text-emerald-600 text-center">Read User</h2>
                    <input name="username" class="inputField" type="text" placeholder="Enter Username">
                    <button type="submit" class="submit-btn">Read</button>
                </form>
            </div>

            <!-- Delete User -->
            <div class="bg-white shadow-lg rounded-2xl p-6 w-80 border border-emerald-200">
                <form method="post" action="/delete" class="space-y-4">
                    <h2 class="text-xl font-semibold text-emerald-600 text-center">Delete User</h2>
                    <input name="username" class="inputField" type="text" placeholder="Enter Username">
                    <button type="submit" class="submit-btn">Delete</button>
                </form>
            </div>

        </div>
    </div>

</body>

</html>